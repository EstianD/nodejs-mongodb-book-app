<h3>{{viewTitle}}</h3>

<form action="/book" method="POST" autocomplete="off">
    {{!-- HIDDEN FIELD FOR ID --}}
    <input type="hidden" name="_id" value={{book._id}}>

    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" name="title" placeholder="Book Title" value="{{book.title}}">
        <div class="text-danger">
            {{book.titleError}}
        </div>
    </div>
    <div class="form-group">
        <label>Author</label>
        <input type="text" class="form-control" name="author" placeholder="Author" value="{{book.author}}">
        <div class="text-danger">
            {{book.authorError}}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Genre</label>
            <input type="text" class="form-control" name="genre" placeholder="Genre" value="{{book.genre}}">
            <div class="text-danger">
                {{book.genreError}}
            </div>
        </div>
        <div class="form-group col-md-6">
            <label for="">Rating</label>
            <select name="rating" class="form-control" value="{{book.rating}}">
                <option value="bad">Bad</option>
                <option value="average">Average</option>
                <option value="good">Good</option>
            </select>
            <div class="text-danger">
                {{book.ratingError}}
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
            <a class="btn btn-secondary" href="/book/list"><i class="fa fa-list-alt"></i>View All</a>
        </div>
    </div>
</form>